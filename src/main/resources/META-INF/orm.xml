<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">

    <entity class="com.github.rskupnik.petclinicmodular.domain.customer.Customer" access="FIELD">
        <table name="customers"/>
        <attributes>
            <id name="id">
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="firstName">
                <column name="firstName" length="200"/>
            </basic>
            <basic name="lastName">
                <column name="lastName" length="200"/>
            </basic>
            <one-to-many name="pets" fetch="EAGER">
                <join-column name="owner"/>
                <cascade><cascade-all/></cascade>
            </one-to-many>
        </attributes>
    </entity>

    <entity class="com.github.rskupnik.petclinicmodular.domain.pet.Pet" access="FIELD">
        <table name="pets"/>
        <attributes>
            <id name="id">
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="name">
                <column name="name" length="200"/>
            </basic>
            <many-to-one name="owner">
                <join-column name="owner"/>
                <cascade><cascade-all/></cascade>
            </many-to-one>
        </attributes>
    </entity>

</entity-mappings>